<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/book_lay"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_160sdp"
        android:background="@drawable/book_item_back"
        android:layout_margin="@dimen/_15sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chartbt"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="Owned by"
                android:textSize="@dimen/_10sdp"
                />


            <TextView
                android:id="@+id/owername_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="@string/underlined_text"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/owername_tv"

                android:layout_marginBottom="@dimen/_5sdp"
                >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/book_cover"
                    android:scaleType="fitXY"

                    />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/bookmark"
                    android:layout_margin="@dimen/_2sdp"

                    />



            </RelativeLayout>




        </RelativeLayout>



        <TextView
            android:id="@+id/chartbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Chart"
            android:textColor="@color/white"
            android:background="@drawable/book_item_bottom_back"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â“˜ Detail"
            android:textColor="#1D5D9B"
            android:background="@drawable/book_item_bottom_back2"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_13sdp"

            />





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_lay"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="@dimen/_20sdp"
        >




    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laws of UX Book Cover Test"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"


        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_below="@+id/book_name"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock_icon"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55 Min ago"
                android:layout_marginLeft="@dimen/_2sdp"




                />


        </LinearLayout>



    </RelativeLayout>



</LinearLayout>